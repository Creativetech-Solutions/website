#!/bin/sh

WEBLATE=~/weblate/weblate/docs/images/
SCREENSHOTS=weblate_web/static/img/

cp $WEBLATE/screenshot-context.png $SCREENSHOTS/BigScreenshot.png
convert $WEBLATE/checks.png -crop 286x324+964+237 $SCREENSHOTS/dialog-checks.png
convert $WEBLATE/checks.png -crop 286x457+964+755 $SCREENSHOTS/source-info.png
convert $WEBLATE/checks.png -crop 920x424+15+952 $SCREENSHOTS/comment-new.png
