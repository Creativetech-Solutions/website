#!/bin/sh

WEBLATE=~/weblate/weblate/docs/images/
SCREENSHOTS=weblate_web/static/img/

cp $WEBLATE/screenshot-context.png $SCREENSHOTS/BigScreenshot.png
convert $WEBLATE/checks.png -crop 266x422+904+237 $SCREENSHOTS/dialog-checks.png
convert $WEBLATE/checks.png -crop 266x542+904+863 $SCREENSHOTS/source-info.png
convert $WEBLATE/checks.png -crop 860x424+15+940 $SCREENSHOTS/comment-new.png
