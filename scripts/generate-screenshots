#!/bin/sh

WEBLATE=~/weblate/weblate/docs/images/
SCREENSHOTS=weblate_web/static/img/

cp $WEBLATE/screenshot-context.png $SCREENSHOTS/BigScreenshot.png
convert $WEBLATE/checks.png -crop 276x234+946+236 $SCREENSHOTS/dialog-checks.png
convert $WEBLATE/checks.png -crop 276x528+946+707 $SCREENSHOTS/source-info.png
convert $WEBLATE/checks.png -crop 887x394+29+882 $SCREENSHOTS/comment-new.png
